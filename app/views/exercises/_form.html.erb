<%= form_for @exercise do |f| %>
  <%= f.label :name %><%= f.text_field :name %>
  <%= f.label :detail %><%= f.text_field :detail %>
  <%= f.label :duration %><%= f.text_field :duration %>
  <h3>Add Workouts:</h3>
  <%= collection_check_boxes(:exercise, :workout_ids, @exercise.workouts_to_add, :id, :name) %>
  <%= f.submit %>
<% end %>
