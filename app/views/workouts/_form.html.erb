<%= form_for @workout do |f| %>
  <div class="form-group"><%= f.label :name %><%= f.text_field :name, class: 'form-control' %></div>
  <div class="form-group"><%= f.label :difficulty %><%= f.text_field :difficulty, class: 'form-control' %></div>
  <div class="form-group">
    <h3>Exercises</h3>
    <%= collection_check_boxes(:workout, :exercise_ids, Exercise.all, :id, :name) do |b| %>
      <div class="checkbox"><%= b.label %><%= b.label { b.check_box } %></div>
    <% end %>
  </div>
  <%= f.hidden_field :community_id, value: @community.id %>
  <div class="form-group"><%= f.submit 'Create', class: 'btn btn-default' %></div>
<% end %>
