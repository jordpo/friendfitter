<%= form_for workout_session, method: method, html: {class: 'form-inline'} do |f| %>
<% if workout_session.persisted? %>
  <div class="checkbox"><%= f.label :pr, 'PR' %> <%= f.check_box :pr %></div>
  <div class="form-group"><%= f.label :comment, class: 'sr-only'%><%= f.text_field :comment, class: 'form-control', placeholder: 'Comment' %></div>
  <%= f.hidden_field :accomplished, value: true %>
<% end %>
<%= f.hidden_field :workout_id, value: @workout.id %>
<div class="form-group"><%= f.submit submit, class: 'btn btn-default' %></div>
<% end %>
