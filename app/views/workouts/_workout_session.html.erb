<%= form_for workout_session, method: method, html: {class: 'form-horizontal'} do |f| %>
<% if workout_session.persisted? %>
  <div class="form-group"><%= f.label :pr %><%= f.check_box :pr %></div>
  <div class="form-group"><%= f.label :comment %><%= f.text_field :comment %></div>
  <%= f.hidden_field :accomplished, value: true %>
<% end %>
<%= f.hidden_field :workout_id, value: @workout.id %>
<div class="form-group"><%= f.submit submit, class: 'btn btn-default' %></div>
<% end %>
